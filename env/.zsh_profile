VIM="nvim"

PERSONAL="${XDG_CONFIG_HOME:-${2:-$HOME/.config}}"/personal
DEV_ENV=$HOME/dev
source $PERSONAL/env
for i in `find -L $PERSONAL`; do
    source $i
done

export GOPATH=$HOME/go
export GIT_USERNAME="dGilli"
export GIT_EMAIL="me@dennisgilli.com"
export GIT_DEFAULT_BRANCH="main"
export GIT_EDITOR=$VIM
export DENO_INSTALL=$HOME/.deno
export FLYCTL_INSTALL=$HOME/.fly
export DEV_ENV_HOME="$HOME/personal/dev"

bindkey -s ^f "tmux-sessionizer\n"
bindkey -s '\eh' "tmux-sessionizer -s 0\n"
bindkey -s '\et' "tmux-sessionizer -s 1\n"
bindkey -s '\en' "tmux-sessionizer -s 2\n"
bindkey -s '\es' "tmux-sessionizer -s 3\n"

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ ! -z "$2" ]] || [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

addToPathFront $HOME/.local/.npm-global/bin
addToPathFront $HOME/.local/apps
addToPathFront $HOME/.local/scripts
addToPathFront $HOME/.local/bin
addToPathFront $HOME/.local/npm/bin
addToPathFront $HOME/.local/go/bin
addToPathFront $HOME/.deno/bin
addToPathFront $HOME/.fly/bin

